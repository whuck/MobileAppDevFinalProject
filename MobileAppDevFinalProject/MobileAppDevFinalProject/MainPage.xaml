<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppDevFinalProject.MainPage">

    <StackLayout>
        <Frame BackgroundColor="White" Padding="2" CornerRadius="0">
            <StackLayout Orientation="Horizontal" Spacing="11" HorizontalOptions="CenterAndExpand">
                <Button x:Name="menuBtnMain" Text="MainPage"  BorderColor="DarkOliveGreen" BorderWidth="2" BackgroundColor="DarkOliveGreen" TextColor="White" Clicked="mBtnClick"/>
                <Button x:Name="menuBtnP1" Text="Page1" BorderColor="DarkOliveGreen" BorderWidth="2"  Clicked="p1BtnClick" TextColor="DarkOliveGreen"/>
                <Button x:Name="menuBtnP2" Text="Page2" BorderColor="DarkOliveGreen" BorderWidth="2" Clicked="p2BtnClick" TextColor="DarkOliveGreen"/>
            </StackLayout>
        </Frame>
        <Label Text="weee final project!" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        <Label Text="Main Page" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Page 1 of 3" FontSize="16" Padding="30,0,30,0"/>
        <Image HeightRequest="{OnPlatform iOS=300, Android=300}" Source="lol.gif" IsAnimationPlaying="True" Aspect="AspectFit"/>

    </StackLayout>

</ContentPage>
